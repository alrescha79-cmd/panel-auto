            printf "\e[0m%-13s %-7s %-8s %2s\n" "            TRJAN XRAY" "  : $tr" " ACCOUNT " 
            printf "\e[0m%-13s %-7s %-8s %2s\n" "            SHADOWSOCKS" " : $ss" "ACCOUNT "  
            echo -e "        ${dark_purple}└─────────────────────────────────┘${neutral}"
