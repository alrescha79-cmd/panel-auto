    echo -e "${red}Failed to restart vmess service${reset}"
    exit 1
fi

clear -x
print_rainbow "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
