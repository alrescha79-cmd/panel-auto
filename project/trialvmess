echo -e "GRPC Link  : ${vmess_grpc}"
print_rainbow "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
echo -e "Expires On : $exp"

# Send Telegram notification for trial Vmess account
trial_message="
